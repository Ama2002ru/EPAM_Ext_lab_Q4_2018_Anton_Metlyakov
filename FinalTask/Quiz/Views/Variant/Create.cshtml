@model Quiz.Models.VariantModel
<div class="modal-content">
    <div class="modal-header">
        <h4>Create variant</h4>
    </div>
    <div class="modal-body openUserDetails">
        @{ if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <h3>Error: @ViewBag.Error</h3>
            }
            else
            {
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Quiz_Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.Question_Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.Variant_Id, new { htmlAttributes = new { @class = "form-control" } })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Variant_Text, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Variant_Text, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Variant_Text, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btnviewclose" />
                            </div>
                        </div>
                    </div>
                    }
                }
            }
                <div>
                    @Html.ActionLink("Back to variants list", "Index")
                </div>
            </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
