@model Quiz.Models.QuizModel
        <div class="modal-content">
            <div class="modal-header">
                <h4>Quiz details</h4>
            </div>
            <div class="modal-body openUserDetails">
                @{ if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <h3>Error: @ViewBag.Error</h3>
                    }
                    else
                    {
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Author)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Author)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Creation_Date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Creation_Date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Success_Rate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Success_Rate)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Questions)
                            </dt>

                            <dd>
                                <table>
                                    <thead>
                                        <tr>
                                            <td>No</td>
                                            <td>Question</td>
                                        </tr>
                                    </thead>
                                    @foreach (var question in Model.Questions)
                                    {
                                        <tr>
                                            <td>
                                                @question.Info
                                            </td>
                                            <td>
                                                @question.Text
                                            </td>

                                        </tr>
                                    }

                                </table>
                            </dd>
                        </dl>
                        <hr />
                        }
                    }
                        <p>
                            @Html.ActionLink("Back to quiz list", "Index")
                        </p>
                    </div>
        </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
