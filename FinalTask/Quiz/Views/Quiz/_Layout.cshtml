<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/task2cyan.css")
    @Styles.Render("~/Content/breadcrumbs.css")
    @Styles.Render("~/Content/modal.css")
    @Styles.Render("~/Content/modalcyan.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header>
        <ul class="breadcrumbs" id="breads">
            <li><a href="signin.html">Sign in</a></li>
            <li><a href="~/users">Users</a></li>
            <li><a href="~/quizes">Quizes</a></li>
            <li><a href="~/myquizes">My Quizes</a></li>
            <li><a href="~/statistic">Statistic</a></li>
            <li><label href="contacts.html">Contacts</label></li>
            <li><label href="about.html">About</label></li>
            <li>

                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Label("Welcome, " + User.Identity.Name + "!");
                }
                else
                {
                    @Html.Label("Welcome, guest user!");
                }

            </li>
        </ul>
        <p />
    </header>
    <nav>
        <ul class="ulnav">
            <li><a href="signin.html">Sign in</a></li>
            <li><a href="register.html">Registration</a></li>
            <li><a href="list.html">User List</a></li>
            <li><label href="contacts.html">Contacts</label></li>
            <li><label href="about.html">About</label></li>
        </ul>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer>
        <div>
            © 2018 Epam Ext Lab
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryajax")

    @RenderSection("scripts", required: false)
</body>
</html>
