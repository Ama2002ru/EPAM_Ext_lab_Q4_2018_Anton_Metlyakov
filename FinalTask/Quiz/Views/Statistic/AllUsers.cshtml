@model IEnumerable<DAL.StatsAllUsers>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <article>
        <h4>Statistic for all users</h4>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total_Assigned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total_Passed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total_Failed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Average_Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Percent_Passed)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total_Assigned)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total_Passed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total_Failed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Average_Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Percent_Passed)
                    </td>
                </tr>
            }
        </table>
        <div>
            @Html.ActionLink("Back to statistic page", "Index", "Statistic")
        </div>
    </article>
</section>
